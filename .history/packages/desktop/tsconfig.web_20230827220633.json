{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src",
    "src/renderer/src/*.d.ts",
    "src/renderer/src/*.ts",
    "src/preload",
    "src/preload/global.d.ts",
    "src/common",
    "src/common/global.d.ts"
  ],
  "exclude": ["_draft"],
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@preload/*": ["src/preload/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
