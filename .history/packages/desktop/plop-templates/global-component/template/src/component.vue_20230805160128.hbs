<script setup lang="ts">
import { useNamespace } from '../../shared/hooks'

defineOptions({ name: 'M{{ pascalCaseComponentName }}', inheritAttrs: false })

const { b } = useNamespace('{{ pascalCase componentName }}')
const getClass = computed(() => {
  return [b()]
})
</script>
{{/if}}

{{#if template}}
<template>
  <div :class="getClass"></div>
</template>
{{/if}}
